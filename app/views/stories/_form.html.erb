<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Full name" %><br />
    <%= f.text_field :author %>

  </div>
  <div class="field">
    <%= f.label "Gender" %><br />
    <%= f.select :gender, options_for_select(["Woman", "Man"]), {}, {:multiple => false} %>
  </div>
  <div class="field">
    <%= f.label "age" %><br />
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label "email address (will not be shared)" %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label "Read our privacy policy?" %><br />
    <%= f.check_box :agreeTerms %>
  </div>
    <div class= "geo">
    <% g=request.location %>
    <%= f.hidden_field :city, :value => g.city %>
    <%= f.hidden_field :country, :value => g.country %>
    <%= f.hidden_field :ip, :value => request.ip %>
    <p>According to your ip address your location is:
      <strong><%= "#{g.city}, #{g.country}" %></strong> (approximated for privacy). </p>
  </div>
  <div class="field">
    <%= f.label "Please write a paragraph describing an interesting life event or describing your lifestyle as a Tibetan in #{g.city}, #{g.country}; Some ideas include: if you could talk to Tibetans in another country about your life, what would you tell them? If you could talk to non-Tibetans about your life, what would you tell them?"  %><br />
    <%= f.text_area :narrative %>
  </div>
  


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
